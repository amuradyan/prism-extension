{
  "manifest_version": 2,

  "name": "Prism",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "prism.png",
    "default_popup": "popup.html"
  },
 
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["mystyle.css"],
      "js": ["build/content.js"]    
    }
  ],

  "background": {
    // "persistent": false,
    "scripts": ["build/background.js"]
  },

  "permissions": [
    "http://*/",
    "https://*/",
    "contextMenus",
    "activeTab",
    "tabs"
  ]
}